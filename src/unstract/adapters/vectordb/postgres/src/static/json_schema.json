    },
    "database": {
      "type": "string",
      "title": "Database",
      "description": "Provide a name for the database"
    },
    "host": {
      "type": "string",
      "title": "Host",
      "description": "Hostname"
    },
    "port": {
      "type": "integer",
      "title": "Port"
    },
    "user": {
      "type": "string",
      "title": "User",
      "description": "Username"
    },
    "password": {
      "type": "string",
      "title": "Password",
      "format": "password",
      "default": ""
    }
  }
}
